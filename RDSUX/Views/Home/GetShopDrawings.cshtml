@model IEnumerable<RDSUX.Models.ShopDrawings>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ShopDrawingId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FileName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TImeStamp)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ShopDrawingId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FileName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TImeStamp)
        </td>
        <td>
            @{
                var downloadmodel = "ShopDrawings_" + item.ShopDrawingId + "_" + item.ProjectId;
            }
            <a href='/Home/DownloadShopDrawings?downloadmodel=@downloadmodel'>Download</a>

            <a href='/Home/DeleteShopDrawingsDocument?downloadmodel=@downloadmodel'>Delete</a>
        </td>
    </tr>
}

</table>
