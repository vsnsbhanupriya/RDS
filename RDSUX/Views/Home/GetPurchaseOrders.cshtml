@model IEnumerable<RDSUX.Models.PurchaseOrder>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProjectId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FileName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TImeStamp)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TImeStamp)
            </td>
            <td>
                @{
                    var downloadmodel = "PurchaseOrders_" + item.PurchaseOrderId + "_" + item.ProjectId;
                }
                <a href='/Home/DownloadPurchaseOrder?downloadmodel=@downloadmodel'>Download</a>

                <a href='/Home/DeletePurchaseOrder?downloadmodel=@downloadmodel'>Delete</a>
            </td>
        </tr>
    }
</table>